<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/transparentBackground"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/bottomSheetBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ellipse_7"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/transparentBackground" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheetBackground"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:background="@drawable/bottom_sheet_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="6dp"
            android:paddingVertical="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/star_background"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/bottomSheetBackground"
            app:layout_constraintTop_toTopOf="@+id/bottomSheetBackground">

            <ImageView
                android:id="@+id/icon_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_stardj_count_on"
                app:layout_constraintBottom_toBottomOf="@id/starCount"
                app:layout_constraintStart_toStartOf="@id/star_layout"
                app:layout_constraintTop_toTopOf="@+id/starCount" />

            <TextView
                android:id="@+id/text_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="19sp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@id/starCount"
                app:layout_constraintStart_toEndOf="@id/icon_star"
                app:layout_constraintTop_toTopOf="@+id/starCount"
                tools:text="Star" />

            <TextView
                android:id="@+id/starCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:letterSpacing="-0.02"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/star_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_star"
                app:layout_constraintTop_toTopOf="@id/star_layout"
                tools:text="99회" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ico_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/star_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/level_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/level_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="@id/nickName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/nickName">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/level_layout"
                    app:layout_constraintEnd_toEndOf="@id/level_layout"
                    app:layout_constraintStart_toStartOf="@id/level_layout"
                    app:layout_constraintTop_toTopOf="@id/level_layout"
                    tools:text="Lv.89" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/icon_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:src="@drawable/ico_female"
                app:layout_constraintBottom_toBottomOf="@id/nickName"
                app:layout_constraintStart_toEndOf="@id/level_layout"
                app:layout_constraintTop_toTopOf="@id/nickName" />

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:letterSpacing="-0.03"
                android:textColor="#202020"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/profileLayout"
                app:layout_constraintStart_toEndOf="@id/icon_female"
                app:layout_constraintTop_toTopOf="@id/profileLayout"
                tools:text="징구리당당숭당당" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toggleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toogle1_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="@id/toggleLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/toggleLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@id/toggle1"
                    app:layout_constraintEnd_toEndOf="@id/toggle1"
                    app:layout_constraintStart_toStartOf="@id/toggle1"
                    app:layout_constraintTop_toTopOf="@id/toggle1"
                    tools:text="Content" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/toogle2_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="@id/toggleLayout"
                app:layout_constraintStart_toEndOf="@id/toggle1"
                app:layout_constraintTop_toTopOf="@id/toggleLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-3sp"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/toggle2"
                    app:layout_constraintEnd_toEndOf="@id/toggle2"
                    app:layout_constraintStart_toStartOf="@id/toggle2"
                    app:layout_constraintTop_toTopOf="@id/toggle2"
                    tools:text="실시간 1위" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/toogle3_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="@id/toggleLayout"
                app:layout_constraintStart_toEndOf="@id/toggle2"
                app:layout_constraintTop_toTopOf="@id/toggleLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/toggle3"
                    app:layout_constraintEnd_toEndOf="@id/toggle3"
                    app:layout_constraintStart_toStartOf="@id/toggle3"
                    app:layout_constraintTop_toTopOf="@id/toggle3"
                    tools:text="주간 BJ 2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/toogle4_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="@id/toggleLayout"
                app:layout_constraintStart_toEndOf="@id/toggle3"
                app:layout_constraintTop_toTopOf="@id/toggleLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/toggle4"
                    app:layout_constraintEnd_toEndOf="@id/toggle4"
                    app:layout_constraintStart_toStartOf="@id/toggle4"
                    app:layout_constraintTop_toTopOf="@id/toggle4"
                    tools:text="은은한 사랑꾼" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/countLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggleLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/followersCountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/countLayout"
                app:layout_constraintEnd_toStartOf="@id/followingCountLayout"
                app:layout_constraintTop_toTopOf="@id/countLayout">

                <TextView
                    android:id="@+id/followersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@id/followersCount"
                    app:layout_constraintEnd_toEndOf="@id/followersCountLayout"
                    app:layout_constraintStart_toStartOf="@id/followersCountLayout"
                    app:layout_constraintTop_toTopOf="@id/followersCountLayout"
                    tools:text="팔로워" />

                <TextView
                    android:id="@+id/followersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="21dp"
                    android:textColor="#202020"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/followersCountLayout"
                    app:layout_constraintEnd_toEndOf="@id/followersCountLayout"
                    app:layout_constraintStart_toStartOf="@id/followersCountLayout"
                    app:layout_constraintTop_toBottomOf="@id/followersText"
                    tools:text="99,999" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#e9e9e9"
                app:layout_constraintBottom_toBottomOf="@id/countLayout"
                app:layout_constraintEnd_toStartOf="@id/followingCountLayout"
                app:layout_constraintStart_toEndOf="@id/followersCountLayout"
                app:layout_constraintTop_toTopOf="@id/countLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/followingCountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/likeCountLayout"
                app:layout_constraintStart_toEndOf="@id/followersCountLayout"
                app:layout_constraintTop_toTopOf="@id/countLayout">

                <TextView
                    android:id="@+id/followingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@id/followingCount"
                    app:layout_constraintEnd_toEndOf="@id/followingCountLayout"
                    app:layout_constraintStart_toStartOf="@id/followingCountLayout"
                    app:layout_constraintTop_toTopOf="@id/followingCountLayout"
                    tools:text="팔로잉" />

                <TextView
                    android:id="@+id/followingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="21dp"
                    android:textColor="#202020"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/followingCountLayout"
                    app:layout_constraintEnd_toEndOf="@id/followingCountLayout"
                    app:layout_constraintStart_toStartOf="@id/followingCountLayout"
                    app:layout_constraintTop_toBottomOf="@id/followingText"
                    tools:text="99,999" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#e9e9e9"
                app:layout_constraintBottom_toBottomOf="@id/countLayout"
                app:layout_constraintEnd_toStartOf="@id/likeCountLayout"
                app:layout_constraintStart_toEndOf="@id/followingCountLayout"
                app:layout_constraintTop_toTopOf="@id/countLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/likeCountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/countLayout"
                app:layout_constraintStart_toEndOf="@id/followingCountLayout"
                app:layout_constraintTop_toTopOf="@id/countLayout">

                <TextView
                    android:id="@+id/likeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@id/likeCount"
                    app:layout_constraintEnd_toEndOf="@id/likeCountLayout"
                    app:layout_constraintStart_toStartOf="@id/likeCountLayout"
                    app:layout_constraintTop_toTopOf="@id/likeCountLayout"
                    tools:text="좋아요" />

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="21dp"
                    android:textColor="#202020"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/likeCountLayout"
                    app:layout_constraintEnd_toEndOf="@id/likeCountLayout"
                    app:layout_constraintStart_toStartOf="@id/likeCountLayout"
                    app:layout_constraintTop_toBottomOf="@id/likeText"
                    tools:text="99,999" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fanLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/fan_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bestFansLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="@id/fanLayout"
                app:layout_constraintEnd_toStartOf="@id/monthChairmanLayout"
                app:layout_constraintStart_toStartOf="@id/fanLayout"
                app:layout_constraintTop_toTopOf="@id/fanLayout">

                <TextView
                    android:id="@+id/bestFansText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#464646"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/bestFansLayout"
                    app:layout_constraintStart_toStartOf="@id/bestFansLayout"
                    app:layout_constraintTop_toTopOf="@id/bestFansLayout"
                    tools:text="BEST FANS" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/icon"
                    app:layout_constraintBottom_toBottomOf="@id/bestFansText"
                    app:layout_constraintStart_toEndOf="@id/bestFansText"
                    app:layout_constraintTop_toTopOf="@id/bestFansText" />

                <FrameLayout
                    android:id="@+id/bestFan1Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@id/bestFansLayout"
                    app:layout_constraintTop_toBottomOf="@id/bestFansText">

                    <ImageView
                        android:id="@+id/bestFan1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ellipse_7" />

                    <ImageView
                        android:id="@+id/bigFan1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/big_fan_1" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bestFan2Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@id/bestFan1Layout"
                    app:layout_constraintTop_toBottomOf="@id/bestFansText">

                    <ImageView
                        android:id="@+id/bestFan2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ellipse_7" />

                    <ImageView
                        android:id="@+id/bigFan2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/big_fan_2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bestFan3Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintEnd_toEndOf="@id/bestFansLayout"
                    app:layout_constraintStart_toEndOf="@id/bestFan2Layout"
                    app:layout_constraintTop_toBottomOf="@id/bestFansText">

                    <ImageView
                        android:id="@+id/bestFan3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ellipse_7" />

                    <ImageView
                        android:id="@+id/bigFan3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/big_fan_3" />
                </FrameLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:background="#ffffff"
                app:layout_constraintBottom_toBottomOf="@id/fanLayout"
                app:layout_constraintEnd_toStartOf="@id/monthChairmanLayout"
                app:layout_constraintStart_toEndOf="@id/bestFansLayout"
                app:layout_constraintTop_toTopOf="@id/fanLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/monthChairmanLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/bestFansLayout"
                app:layout_constraintEnd_toStartOf="@id/kingCupidLayout"
                app:layout_constraintStart_toEndOf="@id/bestFansLayout"
                app:layout_constraintTop_toTopOf="@id/bestFansLayout">

                <TextView
                    android:id="@+id/monthChairmanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#464646"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@id/monthIcon"
                    app:layout_constraintStart_toStartOf="@id/monthChairmanLayout"
                    app:layout_constraintTop_toTopOf="@id/monthChairmanLayout"
                    tools:text="달회장" />

                <ImageView
                    android:id="@+id/monthIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/icon_40597"
                    app:layout_constraintBottom_toBottomOf="@id/monthChairmanText"
                    app:layout_constraintEnd_toEndOf="@id/monthChairmanLayout"
                    app:layout_constraintStart_toEndOf="@id/monthChairmanText"
                    app:layout_constraintTop_toTopOf="@id/monthChairmanText" />

                <ImageView
                    android:id="@+id/monthChairman"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ellipse_7"
                    app:layout_constraintEnd_toEndOf="@id/monthChairmanLayout"
                    app:layout_constraintStart_toStartOf="@id/monthChairmanLayout"
                    app:layout_constraintTop_toBottomOf="@id/monthChairmanText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:background="#ffffff"
                app:layout_constraintBottom_toBottomOf="@id/fanLayout"
                app:layout_constraintEnd_toStartOf="@id/kingCupidLayout"
                app:layout_constraintStart_toEndOf="@id/monthChairmanLayout"
                app:layout_constraintTop_toTopOf="@id/fanLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/kingCupidLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@id/bestFansLayout"
                app:layout_constraintEnd_toEndOf="@id/fanLayout"
                app:layout_constraintStart_toEndOf="@id/monthChairmanLayout"
                app:layout_constraintTop_toTopOf="@id/bestFansLayout">

                <TextView
                    android:id="@+id/kingCupidText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#464646"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/kingCupidLayout"
                    app:layout_constraintStart_toStartOf="@id/kingCupidLayout"
                    app:layout_constraintTop_toTopOf="@id/kingCupidLayout"
                    tools:text="킹큐피드" />

                <ImageView
                    android:id="@+id/kingCupid"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ellipse_7"
                    app:layout_constraintEnd_toEndOf="@id/kingCupidLayout"
                    app:layout_constraintStart_toStartOf="@id/kingCupidLayout"
                    app:layout_constraintTop_toBottomOf="@id/kingCupidText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teamLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/fan_background"
            android:paddingVertical="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fanLayout">

            <TextView
                android:id="@+id/teamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5sp"
                android:textColor="#464646"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/teamLayout"
                app:layout_constraintStart_toStartOf="@id/teamLayout"
                app:layout_constraintTop_toTopOf="@id/teamLayout"
                tools:text="TEAM" />

            <ImageView
                android:id="@+id/teamImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/toogle4_background"
                app:layout_constraintBottom_toBottomOf="@id/teamLayout"
                app:layout_constraintStart_toEndOf="@id/teamText"
                app:layout_constraintTop_toTopOf="@id/teamLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="4sp"
                android:textColor="#202020"
                android:textSize="13sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/teamLayout"
                app:layout_constraintStart_toEndOf="@id/teamImage"
                app:layout_constraintTop_toTopOf="@id/teamLayout"
                tools:text="우주최강슈퍼파워" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center_horizontal"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/teamLayout"
                app:layout_constraintEnd_toEndOf="@id/teamLayout"
                app:layout_constraintTop_toTopOf="@id/teamLayout"
                tools:text="이달 150위" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamLayout">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="프로필보기"
                android:textColor="#303030"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/button2"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/buttonLayout"
                app:layout_constraintTop_toTopOf="@id/buttonLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="선물하기"
                android:textColor="#303030"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/button3"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/button1"
                app:layout_constraintTop_toTopOf="@id/buttonLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/black_button_background"
                android:gravity="center"
                android:text="팔로우"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/buttonLayout"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/button2"
                app:layout_constraintTop_toTopOf="@id/buttonLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
