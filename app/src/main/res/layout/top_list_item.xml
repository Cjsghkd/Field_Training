<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/background"
                android:layout_width="116dp"
                android:layout_height="154dp"
                android:scaleType="centerCrop"
                android:src="@drawable/main_one_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/mini_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_mini_live"
        app:layout_constraintStart_toStartOf="@id/background_layout"
        app:layout_constraintTop_toTopOf="@id/background_layout" />

    <ImageView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/number_w_1"
        app:layout_constraintBottom_toBottomOf="@id/background_layout"
        app:layout_constraintEnd_toEndOf="@id/background_layout" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.05"
        android:text="달대리찡"
        android:textColor="#303030"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/background_layout"
        app:layout_constraintStart_toStartOf="@id/background_layout"
        app:layout_constraintTop_toBottomOf="@id/background_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>