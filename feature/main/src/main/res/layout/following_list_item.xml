<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="followingList"
            type="com.example.model.model.model.star.StarModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:drawableImageUrl="@{followingList.background}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/white_background"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:drawableImageUrl="@{followingList.whiteBackground}"
            app:layout_constraintBottom_toBottomOf="@id/background"
            app:layout_constraintEnd_toEndOf="@id/background"
            app:layout_constraintStart_toStartOf="@id/background"
            app:layout_constraintTop_toTopOf="@id/background" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:circleImageUrl="@{followingList.profImg.url}"
            android:background="@drawable/etc_bj_background"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/white_background"
            app:layout_constraintEnd_toEndOf="@id/white_background"
            app:layout_constraintStart_toStartOf="@id/white_background"
            app:layout_constraintTop_toTopOf="@id/white_background" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/suit"
            android:gravity="center_horizontal"
            android:text="@{followingList.nickNm}"
            android:textColor="#303030"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@id/background"
            app:layout_constraintStart_toStartOf="@id/background"
            app:layout_constraintTop_toBottomOf="@id/background" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="18sp"
            android:text="@{followingList.count}"
            android:textColor="#acacac"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/background"
            app:layout_constraintEnd_toEndOf="@id/background"
            app:layout_constraintStart_toStartOf="@id/background"
            app:layout_constraintTop_toTopOf="@id/background" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>